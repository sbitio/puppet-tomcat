{
  "name": "sbitio-tomcat",
  "version": "0.1.0",
  "author": "SB IT Media, S.L.",
  "summary": "Performs installation and configuration of Tomcat, based on packages provided by the OS.",
  "license": "MIT",
  "source": "http://github.com/sbitio/puppet-tomcat",
  "project_page": "https://github.com/sbitio/puppet-tomcat",
  "issues_url": "https://github.com/sbitio/puppet-tomcat/issues",
  "tags": ["solr"],
  "operatingsystem_support": [
    {
      "operatingsystem": "CentOS",
      "operatingsystemrelease": [ "6", "7" ]
    },
    {
      "operatingsystem": "Debian",
      "operatingsystemrelease": [ "6", "7", "8" ]
    },
    {
      "operatingsystem": "Redhat",
      "operatingsystemrelease": [ "6", "7" ]
    },
    {
      "operatingsystem": "Ubuntu",
      "operatingsystemrelease": [ "12.04", "14.04" ]
    }
  ],
  "dependencies": [
    {
      "name": "puppetlabs/stdlib",
      "version_requirement": ">= 1.0.0"
    }
  ],
  "requirements": [
    {
      "name": "pe",
      "version_requirement":"3.x"
    },
    {
      "name": "puppet",
      "version_requirement": "3.x"
    }
  ]
}

